.nav
  li
    padding: 0 10px
    a
      padding: 0
      &:hover
        background-color: transparent

.site-header
  margin-bottom: 2%
  background: linear-gradient(0deg, #2c2c2b 0, #2c2c2b 1px, rgba(0,0,0,0) 1px, rgba(0,0,0,0) 100%), linear-gradient(90deg, #2c2c2b 0, #2c2c2b 1px, rgba(0,0,0,0) 1px, rgba(0,0,0,0) 100%), linear-gradient(180deg, rgba(0,0,0,.7) 0, rgba(0,0,0,1) 100%);
  background-position: -2px -2px, -2px -2px, 47% 50%;
  background-size: 100px 4px, 4px 100px, auto auto;

.site-branding
  display: flex
  justify-content space-between
  align-items center
  label
    margin-bottom: 0

  input[type=submit]
    display: none

  input[type=search]
    color white
    outline none
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.26);
    border: 1px solid rgba(121, 120, 118, 0.71);
    width 263px
    height 39px
    padding 10px
    font 400 12px Arial
    position: relative
    background: #2c2c2b url("http://dev-tokasrskyi.pantheonsite.io/wp-content/uploads/2017/03/layer-13.png") no-repeat 95% 50%

.header-search
  position: relative
  &:after
    content: ''
    width 2px
    height 20px
    position absolute
    right 37px
    top 10px
    background-color: #444443
    
  
.blog-name-right
.blog-name-left
  text-transform uppercase

.site-title
  margin: 20px 0
  position relative
  a
    &:hover
      text-decoration none


.blog-name-left
  font-size 28px
  color: #ffd500;
  font-weight: 200;
  margin-right: 3px

.blog-name-right
  font-size 30px
  color: #ffffff;
  font-weight: 700;

.navbar-default
  background-color: transparent
  border none
  margin 0
  
.navbar-header
  background-color: #ffd500
  width: 100%
  padding 0.6%

#navbar-collapse
  padding 0

.navbar
  min-height 0

#main-menu
  text-align center

  @media (min-width: 1199px)
    display table
    width: 100%

  li
    display: block;
    border-right 1px solid #ffe76e;
    &:last-child
      border-right: none

    a
      padding 0 5px
      color: #000000
      font-size 15px
      font-weight 400
      text-transform uppercase

  @media (min-width: 1199px)
    li
      display:table-cell;
      float none
      width auto

  .active
    a
      background-color: #ffffff

    position relative
    &:before
      content: ' '
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 5.5px 0 5.5px 7px;
      border-color: transparent transparent transparent #ffd500;
      position absolute
      left 10px
      top 25%
      z-index 2