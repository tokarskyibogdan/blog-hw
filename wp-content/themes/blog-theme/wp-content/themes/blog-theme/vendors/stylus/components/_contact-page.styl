.contact-section-content
  display: flex
  flex-direction row
  align-items center

  h1
    font-size: 36px;
    font-weight: 700;
    text-transform uppercase
    color #272726

  h4
  p
    font 400 14px Arial

  h4
    color: #040303;
    font-weight: 700;
    line-height: 24px;

  p
    color #878585
    font-weight: 400;
    line-height: 15px;

.contact-form
  margin-bottom: 5%
  font 400 14px Arial
  background-size: 6px 6px
  background-image: (linear-gradient(-45deg, transparent 46%, #e1e1e1 49%, #e1e1e1 51%, transparent 55%))
  padding: 20px

  h4
    margin: 0 0 20px 0
    font 700 16px Oswald
    color: #222222
    text-transform uppercase

  p
    margin: 0

  textarea
    margin-bottom: 15px
    resize none
    width: 100%
    padding: 11px
    height 108px

  input
    width: 65%
    padding: 11px
    margin-bottom: 10px
    color: #7f7c7c

  input
  textarea
    outline none
    box-shadow: inset 0 0 9px rgba(0, 0, 0, 0.06)
    border: 1px solid #b7b7b7
    background-color: #e2e2e2

  input[type=submit]
    text-align left
    width 110px
    margin 0
    font 300 14px/14px Oswald
    color #2c2c2b
    position: relative
    text-transform uppercase
    padding 9px 20px 10px 9px
    border none
    background-color: #ffd500
    z-index 2

    &:hover
      color #2c2c2b
      text-decoration none



.send-form-btn
  display: inline-block
  position: relative
  cursor pointer

  &:before
    content: ''
    height: 14px
    width: 10px
    position: absolute
    right 30px
    top 10px
    background-image: url('http://dev-tokasrskyi.pantheonsite.io/wp-content/uploads/2017/03/layer-16.png')
    background-repeat: no-repeat
    z-index 4

  &:after
    content: ''
    z-index 3
    height: 22px
    width: 22px
    position: absolute
    top 6px
    right 27px
    background-size: 2px 2px
    background-image: (linear-gradient(-45deg, #fff1a7 46%, #fff1a7 49%, #fff1a7 51%, transparent 55%))

