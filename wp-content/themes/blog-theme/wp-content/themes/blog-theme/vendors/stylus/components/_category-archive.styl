.category-archive
  background-color: #fff
  img
    width: 100%
  
  .col-sm-6
    padding 5px

.category-post
  position relative
  p
    font 300 16px Oswald
    margin: 13px
    color: #fff
    position: absolute
    bottom 0
    left 0
    display none
  
  &:hover
    background-color: black
    img
      opacity: 0.3
    p
      display: block

.category-post-title
  position absolute
  top 0
  left 0
  margin: 0
  font 300 16px Oswald
  color #222222
  text-transform uppercase
  padding: 1% 2%
  text-overflow ellipsis
  background-color: #ffd500
  

